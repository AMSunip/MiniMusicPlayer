<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">  
   <am.android.view.SlidingMenu
    android:id="@+id/slide_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <include layout="@layout/layout_menu"/> 
   <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">                  
   <RelativeLayout 
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme_original">
   <RelativeLayout 
    android:id="@+id/title_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f88800">
   <ImageButton 
    android:id="@+id/imgbtn_main_playlist"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:contentDescription="@null"
    android:background="#f88800"/>
   <TextView 
    android:id="@+id/tv_mini_playlist"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:textColor="#ffffff"
    android:textSize="20sp"
    android:text="@string/app_name"/>  
   <ImageButton 
    android:id="@+id/imgbtn_playlist_refresh"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:contentDescription="@null"
    android:background="#f88800"/>
   </RelativeLayout> 
   <android.support.v4.view.ViewPager  
    android:id="@+id/viewpager"  
    android:layout_width="wrap_content"  
    android:layout_height="wrap_content"  
    android:layout_below="@+id/title_main"
    android:layout_gravity="center" >   
   <android.support.v4.view.PagerTabStrip    
    android:id="@+id/pagertab"    
    android:layout_width="wrap_content"    
    android:layout_height="0dip"    
    android:layout_gravity="top"/>          
   </android.support.v4.view.ViewPager>   
   </RelativeLayout>                            
   </RelativeLayout>
   </am.android.view.SlidingMenu>
</RelativeLayout>